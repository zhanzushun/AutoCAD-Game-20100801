<UI:CustomChromeWindow x:Class="UI.GameOver"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:UI="clr-namespace:UI"
  AllowsTransparency="True"
  WindowStyle="None"
  Title="Game Over"
  Height="400"
  Width="400"
  Icon="/AutoCADGame;component/Themes/WindowIcon.png"
  >
  <StackPanel>
    <TextBlock x:Name="mText" Foreground="WhiteSmoke" FontSize="18" TextWrapping="Wrap" />
    <Image x:Name="mImage" Source="GameOver.jpg"/>
    <Button x:Name="mBtnOk" Click="Ok">再来一次</Button>
    <Button Click="Cancel">我要回AutoCAD了</Button>
  </StackPanel>
</UI:CustomChromeWindow>
