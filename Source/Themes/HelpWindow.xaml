      <LineBreak />
      <Run>按</Run>
      <Run Foreground="Yellow">空格键</Run>
      <Run>发射子弹</Run>
      <LineBreak />
      <LineBreak />
      <Run>按</Run>
      <Run Foreground="Yellow">W</Run>
      <Run>,</Run>
      <Run Foreground="Yellow">S</Run>
      <Run>,</Run>
      <Run Foreground="Yellow">A</Run>
      <Run>,</Run>
      <Run Foreground="Yellow">D</Run>
      <Run>上下左右移动视角</Run>
      <LineBreak />
      <LineBreak />
    </TextBlock>
  </Grid>
</UI:CustomChromeWindow>
