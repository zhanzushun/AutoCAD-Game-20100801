    <TextBlock Foreground="WhiteSmoke" FontSize="18" TextWrapping="Wrap">
      <Run>按</Run>
      <Run Foreground="Yellow">上</Run>
      <Run>,</Run>
      <Run Foreground="Yellow">下</Run>
